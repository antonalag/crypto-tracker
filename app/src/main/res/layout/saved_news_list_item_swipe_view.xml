<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/saved_news_list_item_swipe"
    app:dragEdge="right"
    android:layout_margin="10dp"
    app:mode="same_level">

    <!-- Swipe layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/background_delete_shape">

        <ImageView
            android:id="@+id/delete_saved_news"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:alpha="0.85"
            android:src="@drawable/ic_trash"
            android:layout_centerInParent="true"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Main layout -->
    <LinearLayout
        android:id="@+id/saved_news_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_news_item_shape">

        <TextView
            android:id="@+id/saved_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:elevation="2dp"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            />

    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>