<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/edit_investment_primary_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_investment_cryptocurrency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"/>

        <EditText
            android:id="@+id/edit_investment_purchased_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_investment_cryptocurrency_name"
            android:inputType="number"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:hint="Valor adquirido"
            android:textColorHint="@color/secondary_accent_color"
            android:backgroundTint="@color/secondary_accent_color"
            android:singleLine="true"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_investment_primary_data">

        <LinearLayout
            android:id="@+id/edit_invest_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/cancel_button_shape"
            android:alpha="0.85">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="@string/cancelar"
                android:textColor="@color/third_accent_color"
                android:gravity="center"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_invest_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/confirm_button_shape"
            android:alpha="0.85">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="@string/modificar"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>