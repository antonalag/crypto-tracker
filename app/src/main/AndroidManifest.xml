<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uoc.tfm.antonalag.cryptotracker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CryptoTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_ct"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptoTracker">
        <activity android:name=".ui.userpreferences.UserPreferencesView"></activity>
        <activity android:name=".ui.user.UserView" />
        <activity android:name=".ui.exchange.ExchangeView" />
        <activity android:name=".ui.util.BaseActivity" />
        <activity android:name=".ui.news.NewsDetailView" />
        <activity android:name=".ui.news.SavedNewsView" />
        <activity android:name=".ui.news.NewsView" />
        <activity android:name=".ui.home.HomeView" />
        <activity android:name=".ui.login.LoginView" />
        <activity android:name=".ui.register.RegisterView" />
        <activity android:name=".ui.cryptocurrency.CryptocurrencyStatisticsView" />
        <activity
            android:name=".ui.splash.SplashView"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>